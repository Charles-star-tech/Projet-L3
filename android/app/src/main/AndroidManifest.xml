<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charles.tutore_app">

    <!-- ⚠️ Nécessaire pour que Facebook fonctionne via internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="TransMooré"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- 🎯 Déclaration du SDK Facebook : APP ID – doit être dans <application>, PAS dans <activity> -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- 🎯 Déclaration du CLIENT TOKEN Facebook (Android 11+) -->
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <!-- 🔘 Début de l’activité principale Flutter/Android -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- ✅ Thème normal Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 🔘 Activité Facebook – nécessaire pour login FB -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <!-- 🔘 Activité de redirection CustomTab – permet retour depuis navigateur après login -->
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <!-- ❗ ContentProvider Facebook – nécessaire pour partager vers FB -->
        <provider
            android:authorities="com.facebook.app.FacebookContentProvider.657549100591524"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <!-- 🔗 Requis par Flutter pour l’intégration des plugins -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

    <queries>
        <!-- 📱 Permet d’interroger les apps Facebook/Messenger installées -->
        <provider android:authorities="com.facebook.katana.provider.PlatformProvider" />
        <provider android:authorities="com.facebook.orca.provider.PlatformProvider" />
    </queries>
</manifest>
